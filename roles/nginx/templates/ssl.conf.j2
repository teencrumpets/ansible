ssl_certificate "/opt/ssl/{{ wildcard_cert }}";
ssl_certificate_key "/opt/ssl/{{ wildcard_key_name }}";
ssl_password_file /opt/ssl/ssl.pass;

http2 on;
ssl_protocols TLSv1.2 TLSv1.3;

#TLS 1.2 Requirements
ssl_ciphers 'ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES128-GCM-SHA256';

#ECDHE Key Exchange
ssl_ecdh_curve X25519:prime256v1:secp384r1;
ssl_prefer_server_ciphers on;

ssl_session_cache   shared:SSL:10m;
ssl_session_timeout 10h;